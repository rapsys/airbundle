{# Display login or application form #}
{% if forms is defined and forms %}
	<aside class="form">
		{# <header><h2>Toolbox</h2></header> #}
		{% if forms.register is defined and forms.register %}
			{{ include('@RapsysAir/form/_register.html.twig') }}
		{% endif %}
		{% if forms.login is defined and forms.login %}
			{{ include('@RapsysAir/form/_login.html.twig') }}
		{% else %}
			{% if forms.application is defined %}
				{{ include('@RapsysAir/form/_application.html.twig') }}
			{% endif %}
			{% if forms.location is defined %}
				{{ include('@RapsysAir/form/_location.html.twig') }}
			{% endif %}
			{% if forms.session is defined %}
				{{ include('@RapsysAir/form/_session.html.twig') }}
			{% endif %}
			{% if forms.user is defined %}
				{{ include('@RapsysAir/form/_user.html.twig') }}
			{% endif %}
		{% endif %}
	</aside>
{% endif %}
